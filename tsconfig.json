{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2018",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@ceramicnetwork/*": ["./*/"]
    }
  },
  "exclude": [
    "node_modules",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}
